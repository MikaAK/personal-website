a([href]='link', target='_blank')
  mat-card.w-100.h-100.mat-card-no-padding(
    fxLayout='column',
    mkClassOnHover='mat-elevation-z5',
    mkClassOffHover='mat-elevation-z3'
  )
    img.w-100([src]='imageUrl')

    h5.f3.tc.mt3 {{ title}}

    .pv3.ph5(
      fxFlex='1 1 auto',
      fxLayout='row wrap',
      fxLayoutGap='5px',
      fxLayoutAlign='center center'
    )
      mk-pill(*ngFor='let tag of tags', [backgroundColor]='tag.color') {{ tag.name }}
